<zk>
  <window title="Administrasi Pegawai" border="normal" mode="modal"
      width="500px" height="300px" closable="true"
      apply="org.zkoss.bind.BindComposer"
      viewModel="@id('adm_peg_vm') @init('lab.aikibo.viewmodel.AdmPegawaiVM')">
    <vlayout>
      <groupbox width="200px">
        <caption>Identitas</caption>
        <grid>
          <columns>
            <column width="60px"/>
            <column width="140px"/>
          </columns>
          <rows>
            <row>NIP</row>
            <row>
              <textbox value="@bind(adm_peg_vm.currentPegawai.nip)">
                <attribute name="onOK">
                  <![CDATA[nama.focus();]]>
                </attribute>
              </textbox>
            </row>
          </rows>
          <rows>
            <row>Nama</row>
            <row>
              <textbox value="@bind(adm_peg_vm.currentPegawai.nmPegawai)">
                <attribute name="onOK">
                  <![CDATA[btnSimpan.focus();]]>
                </attribute>
              </textbox>
            </row>
          </rows>
        </grid>
        <hbox>
          <button label="Simpan" onClick="@command('save')" />
          <button label="Hapus" onClick="@command('delete')" />
          <button label="Batal" onClick="@command('clear')" />
        </hbox>
      </groupbox>
      <groupbox>
        <caption>Data</caption>
        <listbox id="box" model="@bind(adm_peg_vm.daftarPegawai)"
            selectedItem="@bind(adm_peg_vm.currentPegawai)"
            style="overflow:auto; font-size:small" multiple="true"
            mold="paging" autopaging="true">
          <listhead>
            <listheader label="NIP" width="100px" />
            <listheader label="NAMA" />
          </listhead>
          <template name="model" var="data">
            <listitem>
              <listcell label="@load(data.nip)" />
              <listcell label="@load(data.nama)" />
            </listitem>
          </template>
        </listbox>
      </groupbox>
    </vlayout>
  </window>
</zk>